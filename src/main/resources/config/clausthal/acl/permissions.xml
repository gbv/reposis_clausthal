<?xml version="1.0" encoding="UTF-8"?>
<mcrpermissions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="MCRPermissions.xsd" xmlns:xlink="http://www.w3.org/1999/xlink"
  xmlns:xml="http://www.w3.org/XML/1998/namespace">
  <mcrpermission name="create-mods" ruledescription="admin, editor or submitter">
    <condition format="xml">
      <boolean operator="or">
        <condition field="group" operator="=" value="admin" />
        <condition field="group" operator="=" value="editor" />
        <condition field="group" operator="=" value="submitter" />
      </boolean>
    </condition>
  </mcrpermission>
</mcrpermissions>
