<?xml version="1.0" encoding="UTF-8"?>
<imports>
  <include uri="webapp:editor/editor-mods-common.xml" />

  <panel id="edit-mods-journal-admin">
    <hidden var="@ID" />
    <hidden var="@label" />
    <hidden var="@version" />
    <hidden var="service" descendants="true" />
    <hidden var="metadata/@xml:lang" default="de" />

    <include uri="webapp:editor/editor-mods-external.xml" ref="mods.additional.admin" />

    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/@ID" />
    <hidden var="metadata/def.modsContainer/@class" default="MCRMetaXML" />
    <hidden var="metadata/def.modsContainer/@notinherit" default="true" />
    <hidden var="metadata/def.modsContainer/@heritable" default="false" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:typeOfResource" default="text" />


    <!-- Basisangaben zum Dokument -->
    <cell row="10" colspan="3" anchor="NORTHWEST" class="editorSubHeadlines">
      <text id="journal.titles" i18n="component.mods.metaData.dictionary.journal" />
      <text><label>/</label></text>
      <text id="series.titles" i18n="component.mods.metaData.dictionary.series" />
      <text><label> - </label></text>
      <text id="mandatory.fields" i18n="component.mods.metaData.dictionary.requiredFields" />
    </cell>

    <!-- Genre Journal/Series -->
    <cell row="20" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.genre.journal.label" style="padding-top:5px;" />
    <cell row="20" col="2" anchor="NORTHWEST" ref="mods.genre.journal" var="metadata/def.modsContainer/modsContainer/mods:mods" style="padding-top:5px;" />
    <cell row="20" col="3" anchor="NORTHWEST" ref="mods.genre.journal.help" style="padding-top:5px;" />
    <!-- Genre Journal/Series -->

    <!-- pub_title_orig [text] -->
    <cell row="30" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.title.label" />
    <cell row="30" col="2" anchor="NORTHWEST" ref="mods.title" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="30" col="3" anchor="NORTHWEST" ref="mods.title.help" />
    <!-- pub_title_orig [text] END -->

    <!-- Publisher [text] -->
    <cell row="40" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.publisher.label" style="padding-top:5px;" />
    <cell row="40" col="2" anchor="NORTHWEST" ref="mods.publisher" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" style="padding-top:5px;" />
    <cell row="40" col="3" anchor="NORTHWEST" ref="mods.publisher.help" style="padding-top:5px;" />
    <!-- Publisher END -->

    <!-- E-Mail -->
    <cell row="50" col="1" anchor="NORTHEAST" ref="mods.contact.label" />
    <cell row="50" col="2" anchor="NORTHWEST" ref="mods.contact.output" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="50" col="3" anchor="NORTHEAST" ref="mods.contact.help" />
    <!-- E-Mail END -->

    <!--  Erweiterte Angaben zum Dokument -->
    <cell row="60" colspan="3" anchor="NORTHWEST" class="editorSubHeadlines">
      <text id="journal.more" i18n="component.mods.metaData.dictionary.categorybox" />
    </cell>

    <!-- pub_title_html [text] -->
    <cell row="70" col="1" anchor="NORTHEAST" ref="mods.htmltitle.label" />
    <cell row="70" col="2" anchor="NORTHWEST" ref="mods.htmltitle" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo[@transliteration='html']" />
    <cell row="70" col="3" anchor="NORTHWEST" ref="mods.htmltitle.help" />
    <!-- pub_title_html [text] END -->

    <!-- pub_title_engl[text] -->
    <cell row="80" col="1" anchor="NORTHEAST" ref="mods.title.translated.label" />
    <cell row="80" col="2" anchor="NORTHWEST" ref="mods.title.translated" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="80" col="3" anchor="NORTHWEST" ref="mods.title.translated.help" />
    <!-- pub_title_engl[text] END -->

    <!-- short title [text] -->
    <cell row="90" col="1" anchor="NORTHEAST" ref="mods.shorttitle.label" />
    <cell row="90" col="2" anchor="NORTHWEST" ref="mods.shorttitle" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo[@type='alternative']" />
    <cell row="90" col="3" anchor="NORTHWEST" ref="mods.shorttitle.help" />
    <!-- short title [text] END -->

    <!-- Place [text] -->
    <cell row="100" col="1" anchor="NORTHEAST" ref="mods.publisher.place.label" style="padding-top:5px;" />
    <cell row="100" col="2" colspan="2" anchor="NORTHWEST" ref="mods.publisher.place" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" style="padding-top:5px;" />
    <!-- Place END -->

    <!-- Identifier -->
    <cell row="110" col="1" anchor="NORTHEAST" ref="mods.identifier.label" />
    <cell row="110" col="2" anchor="NORTHWEST" ref="mods.identifier.journals" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="110" col="3" anchor="NORTHWEST" ref="mods.identifier.help" />
    <!-- Identifier END -->

    <!-- characteristics -->
    <cell row="120" col="1" anchor="NORTHEAST" ref="mods.characteristics.label" />
    <cell row="120" col="2" anchor="NORTHWEST" ref="mods.characteristics" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="120" col="3" anchor="NORTHWEST" ref="mods.characteristics.help" />
    <!-- characteristics END -->

  <!-- Interne Daten -->
    <cell row="130" colspan="3" anchor="NORTHWEST" class="editorSubHeadlines">
      <text id="thesis.internals" i18n="component.mods.metaData.dictionary.institution.box" />
    </cell>

    <!-- application specific internal data -->
    <cell row="140" col="1" colspan="3" anchor="NORTHWEST" ref="mods.internals" var="metadata/def.modsContainer/modsContainer/mods:mods" />

    <cell col="1" colspan="3" row="300" anchor="EAST" style="padding-top:20px;">
      <submitButton width="100px" i18n="common.button.save" />
      <cancelButton width="100px" i18n="common.button.cancel" />
    </cell>
  </panel>
</imports>
