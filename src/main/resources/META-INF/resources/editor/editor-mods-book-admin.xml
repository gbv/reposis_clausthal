<?xml version="1.0" encoding="UTF-8"?>

<imports>
  <include uri="webapp:editor/editor-mods-common.xml" />

  <panel id="edit-mods-book-admin">
    <hidden var="@ID" />
    <hidden var="@label" />
    <hidden var="@version" />
    <hidden var="service" descendants="true" />
    <hidden var="metadata/@xml:lang" default="de" />

    <include uri="webapp:editor/editor-mods-external.xml" ref="mods.additional.admin" />

    <cell col="1" colspan="3" row="450" anchor="NORTHEAST" ref="mods.genre.book" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/@ID" />
    <hidden var="metadata/def.modsContainer/@class" default="MCRMetaXML" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:typeOfResource" default="text" />
    <hidden var="metadata/def.modsContainer/@notinherit" default="true" />
    <hidden var="metadata/def.modsContainer/@heritable" default="false" />

    <!-- Serie (Verweis auf MyCoRe-ID) -->
    <cell row="5" colspan="3" anchor="NORTHWEST" ref="displaySeries" />

    <!-- Basisangaben zum Dokument -->
    <cell row="10" colspan="3" anchor="NORTHWEST" class="editorSubHeadlines">
      <text id="book.titles" i18n="component.mods.metaData.dictionary.book" />
      <text><label> - </label></text>
      <text id="mandatory.fields" i18n="component.mods.metaData.dictionary.requiredFields" />
    </cell>

    <!-- Title --> <!-- ToDo: wird abgelöst durch MyCoRe-Parent-Child-Beziehung! -->
    <cell row="20" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.title.label" style="padding-top:5px;" />
    <cell row="20" col="2" anchor="NORTHWEST" ref="mods.title" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" style="padding-top:5px;" />
    <cell row="20" col="3" anchor="NORTHWEST" ref="mods.title.help" style="padding-top:5px;" />
    <!-- Title END -->

    <!-- pub_autor_dok_txt [text] and reviewer -->
    <cell row="30" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.person.label" />
    <cell row="30" col="2" anchor="NORTHWEST" ref="mods.person" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="30" col="3" anchor="NORTHWEST" ref="mods.person.help" />
    <!-- pub_autor_dok_txt [text] and reviewer END -->

    <!-- Publisher [text] -->
    <cell row="50" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.publisher.label" />
    <cell row="50" col="2" anchor="NORTHWEST" ref="mods.publisher" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="50" col="3" anchor="NORTHWEST" ref="mods.publisher.help" />
    <!-- Publisher END -->

   <!-- Institution der Einreichung -->
    <cell row="55" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.submissionAtInstitute.label" />
    <cell row="55" col="2" anchor="NORTHWEST" ref="mods.assignedInstitute" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="55" col="3" anchor="NORTHEAST" ref="mods.submissionAtInstitute.help" />
    <!-- Institution END -->

    <!-- E-Mail -->
    <cell row="60" col="1" anchor="NORTHEAST" ref="mods.contact.label" />
    <cell row="60" col="2" anchor="NORTHWEST" ref="mods.contact.output" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="60" col="3" anchor="NORTHEAST" ref="mods.contact.help" />
    <!-- E-Mail END -->

    <!--  Erweiterte Angaben zum Dokument -->
    <cell row="70" colspan="3" anchor="NORTHWEST" class="editorSubHeadlines">
      <text id="book.more" i18n="component.mods.metaData.dictionary.categorybox" />
    </cell>

    <!-- pub_title_html [text] -->
    <cell row="80" col="1" anchor="NORTHEAST" ref="mods.htmltitle.label" />
    <cell row="80" col="2" anchor="NORTHWEST" ref="mods.htmltitle" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo[@transliteration='html']" />
    <cell row="80" col="3" anchor="NORTHWEST" ref="mods.htmltitle.help" />
    <!-- pub_title_html [text] END -->

    <!-- Title Translated -->
    <cell row="90" col="1" anchor="NORTHEAST" ref="mods.title.translated.label" />
    <cell row="90" col="2" anchor="NORTHWEST" ref="mods.title.translated" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="90" col="3" anchor="NORTHWEST" ref="mods.title.translated.help" />
    <!-- Title Translated END -->

    <!-- pub_subtitle [text] -->
    <cell row="100" col="1" anchor="NORTHEAST" ref="mods.subtitle.label" />
    <cell row="100" col="2" anchor="NORTHWEST" ref="mods.subtitle" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="100" col="3" anchor="NORTHWEST" ref="mods.subtitle.help" />
    <!-- pub_subtitle [text] END -->

    <!-- pub_corporation -->
    <cell row="105" col="1" anchor="NORTHEAST" ref="mods.corporation.label" />
    <cell row="105" col="2" anchor="NORTHWEST" ref="mods.corporation" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="105" col="3" anchor="NORTHWEST" ref="mods.corporation.help" />
    <!-- pub_corporation END -->

    <!-- Edition -->
    <cell row="110" col="1" anchor="NORTHEAST" ref="mods.edition.label" />
    <cell row="110" col="2" anchor="NORTHWEST" ref="mods.edition" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="110" col="3" anchor="NORTHWEST" ref="mods.edition.help" />
    <!-- Edition END -->

    <!-- Volume -->
    <cell row="120" col="1" anchor="NORTHEAST"><text i18n="component.mods.metaData.dictionary.volume.article" /></cell>
    <cell row="120" col="2" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:relatedItem[@type='host']/mods:part/mods:detail[@type='volume']/mods:number" anchor="NORTHWEST" ref="TFzeile32" />
    <cell row="120" col="3" anchor="NORTHWEST" ref="mods.volume.help" />
    <!-- Volume END -->

    <!-- Place -->
    <cell row="130" col="1" anchor="NORTHEAST" ref="mods.book.place.label" />
    <cell row="130" col="2" anchor="NORTHWEST" ref="mods.book.place" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="130" col="3" anchor="NORTHWEST" ref="mods.book.place.help" />
    <!-- Place END -->

    <!-- Country of publication -->
    <cell row="140" col="1" anchor="NORTHEAST" ref="mods.countryOfPublication.label" />
    <cell row="140" col="2" anchor="NORTHWEST" ref="mods.countryOfPublication" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="140" col="3" anchor="NORTHWEST" ref="mods.countryOfPublication.help" />
    <!-- Country of publication END -->

    <!-- Datum der Veröffentlichung [text] -->
    <cell row="150" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.dateIssued.book.label" />
    <cell row="150" col="2" anchor="NORTHWEST" ref="mods.dateIssued.ct" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="150" col="3" anchor="NORTHWEST" ref="mods.dateIssued.help" />
    <!-- Datum der Veröffentlichung END -->

    <!-- LANGUAGE -->
    <cell row="160" col="1"  anchor="NORTHEAST" ref="mods.languageTerm.label" style="padding-top:5px;"/>
    <cell row="160" col="2" anchor="NORTHWEST" ref="mods.languageTerm.optional" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:language" style="padding-top:5px;" />
    <cell row="160" col="3" anchor="NORTHWEST" ref="mods.languageTerm.help" style="padding-top:5px;"/>
    <!-- LANGUAGE END -->

    <!-- Abstract -->
    <cell row="170" col="1" anchor="NORTHEAST" ref="mods.abstract.label" />
    <cell row="170" col="2" anchor="NORTHWEST" ref="mods.abstract" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="170" col="3" anchor="NORTHWEST" ref="mods.abstract.help" />
    <!-- Abstract END -->

    <!-- Extent|Part -->
    <cell row="180" col="1" anchor="NORTHEAST" ref="mods.book.part.extent.label" />
    <cell row="180" col="2" anchor="NORTHWEST" ref="mods.book.part.extent" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="180" col="3" anchor="NORTHWEST" ref="mods.book.part.extent.help" />
    <!-- Extent|Part END -->

    <!-- pub_klassifik -->
    <cell row="190" col="1" anchor="NORTHEAST" ref="mods.ddc.label" />
    <cell row="190" col="2" anchor="NORTHWEST" ref="mods.ddc.optional" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="190" col="3" anchor="NORTHWEST" ref="mods.ddc.help" />
    <!-- pub_klassifik END -->

    <!-- Stichworte -->
    <cell row="200" col="1" anchor="NORTHEAST" ref="mods.subject.label" />
    <cell row="200" col="2" anchor="NORTHWEST" ref="mods.subject" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="200" col="3" anchor="NORTHWEST" ref="mods.subject.help" />
    <!-- Stichworte END -->

    <!-- Identifier Panel -->
    <cell row="210" colspan="3" anchor="NORTHWEST" class="editorSubHeadlines">
      <text id="book.identifier" i18n="component.mods.metaData.dictionary.identifier.box" />
    </cell>

    <!-- Identifier -->
    <cell row="220" col="1" anchor="NORTHEAST" ref="mods.identifier.label" style="padding-top:5px;"/>
    <cell row="220" col="2" anchor="NORTHWEST" ref="mods.identifier" var="metadata/def.modsContainer/modsContainer/mods:mods" style="padding-top:5px;"/>
    <cell row="220" col="3" anchor="NORTHWEST" ref="mods.identifier.help" style="padding-top:5px;"/>
    <!-- Identifier END -->

    <!-- URL -->
    <cell row="230" col="1" anchor="NORTHEAST" ref="mods.location.url.label" />
    <cell row="230" col="2" anchor="NORTHWEST" ref="mods.location.url" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:location" />
    <cell row="230" col="3" anchor="NORTHWEST" ref="mods.location.url.help" />
    <!-- URL END -->

  <!-- Interne Daten -->
    <cell row="240" colspan="3" anchor="NORTHWEST" class="editorSubHeadlines">
      <text id="learning.internals" i18n="component.mods.metaData.dictionary.institution.box" />
    </cell>

    <!-- Rechte -->
    <cell row="245" col="1" anchor="NORTHEAST" ref="mods.rights.label" style="padding-top:5px;" />
    <cell row="245" col="2" anchor="NORTHWEST" ref="mods.rights" var="metadata/def.modsContainer/modsContainer/mods:mods" style="padding-top:5px;" />
    <cell row="245" col="3" anchor="NORTHEAST" ref="mods.rights.help" style="padding-top:5px;" />
    <!-- Rechte END -->

    <!-- 250-260 reserviert für Embargo etc. -->

    <!-- application specific internal data -->
    <cell row="270" col="1" colspan="3" anchor="NORTHWEST" ref="mods.internals" var="metadata/def.modsContainer/modsContainer/mods:mods" />


    <!-- save cancel buttons -->
    <cell col="1" colspan="3" row="300" anchor="NORTHEAST">
      <submitButton class="submit_big" i18n="common.button.save" />
      <cancelButton class="submit_big" i18n="common.button.cancel" />
    </cell>

  </panel>
</imports>