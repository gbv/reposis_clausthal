  <include id="mods.additional.admin">

    <cell row="250" col="1" class="mandatory" anchor="NORTHEAST" style="padding-top:5px;">
      <!--<text i18n="component.mods.metaData.dictionary.status" />-->
      <text> <label xml:lang="de">Status </label> </text>
    </cell>
    <cell row="250" col="2" anchor="NORTHWEST" sortnr="500" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:classification[@displayLabel='status']"
      style="padding-top:5px;">
      <panel>
        <cell var="@mcr:categId">
          <list width="30" type="radio" default="clausthal_status:published">
            <include uri="classification:editorComplete:-1:children:clausthal_status" cacheable="true" />
          </list>
        </cell>
      </panel>
    </cell>
    <cell row="250" col="3" anchor="NORTHEAST" style="padding-top:5px;">
      <helpPopup width="400px" height="250px" class="helpButton">
        <label xml:lang="de">
          Ist dieses Dokument öffentlich auffindbar ('veröffentlicht') oder nicht?
        </label>
        <label xml:lang="en">
          Is this document publicly searchable ('published') or not?
        </label>
      </helpPopup>
    </cell>
    <!-- Datum der Freigabe -->
    <cell row="260" col="1" anchor="NORTHEAST">
      <text id="mods.embargo.label" i18n="component.mods.metaData.dictionary.accessCondition.embargo" />
    </cell>
    <cell row="260" col="2" sortnr="500" anchor="NORTHWEST" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:accessCondition[@type='embargo']">
      <panel>
        <cell col="1">
          <textfield id="mods.embargo.text" width="20" maxlength="20">
            <condition id="mods.embargo.cond" required="false" type="datetime" format="yyyy-MM-dd;yyyy-MM;yyyy">
              <label xml:lang="de">
                Angabe des Datums, ab wann der hinterlegte Volltext für alle sichtbar sein soll.
                Tragen Sie das Datum des Embargoablaufs im ISO Format mit Bindestrich (YYYY-MM-DD) ein.
                <br />
                Beispiel: 2003-01-27 oder 2010 oder 2009-01
                <br />
              </label>
              <label xml:lang="en">Enter the expire date of embargo here in the ISO Format (YYYY-MM-DD).</label>
            </condition>
          </textfield>
        </cell>
      </panel>
    </cell>
    <cell row="260" col="3" anchor="NORTHEAST">
      <helpPopup id="mods.embargo.help" width="400px" height="250px">
        <label xml:lang="de">
          Dieses Dokument soll mit einem Embargo belegt werden?
          <br />
          Geben Sie das Datum ein, wann dieses ablaufen soll. Das Datum muss im ISO Format mit Bindestrich YYYY-MM-DD, YYYY-MM oder YYYY
          angegeben werden.
          <br />
          Beispiel: 2003-01-27 oder 2010 oder 2009-01
          <br />
        </label>
        <label xml:lang="en">
          Date of embargo expiration
        </label>
      </helpPopup>
    </cell>
    <!-- Datum der Freigabe END -->
  </include>

