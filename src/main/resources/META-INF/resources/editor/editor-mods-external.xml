  <!-- E-Mail -->
  <text id="mods.contact.label" i18n="component.mods.metaData.dictionary.email" />
  <panel id="mods.contact">
    <cell anchor="NORTHWEST" var="mods:extension[@displayLabel='contact']/contact">
      <repeater min="1" max="500" pos="right" var="mods:email">
        <panel>
          <cell anchor="NORTHWEST">
            <textfield id="mods.contact.text" width="60" maxlength="512">
              <condition id="mods.contact.cond" required="true">
                <label xml:lang="de">Bitte tragen Sie Ihre Mailadresse ein.</label>
                <label xml:lang="en">Enter your mail address here.</label>
              </condition>
            </textfield>
          </cell>
        </panel>
      </repeater>
    </cell>
  </panel>

  <panel id="mods.contact.output">
    <cell anchor="NORTHWEST" var="mods:extension[@displayLabel='contact']/contact">
      <repeater min="1" max="1" pos="right" var="mods:email">
        <output default="keine E-Mailadresse angegeben" />
      </repeater>
    </cell>
  </panel>

  <helpPopup id="mods.contact.help" width="400px" height="250px">
    <label xml:lang="de">
      Geben Sie hier Ihre E-Mail-Adresse für evtl. Rückfragen in der Bearbeitungsphase (bis zur
      Freischaltung des Dokumentes) an.
    </label>
    <label xml:lang="en">
      Your E-Mail address.
    </label>
  </helpPopup>
  <!-- E-Mail END -->

