  <text id="mods.assignedInstitute.label" i18n="component.mods.metaData.dictionary.institution.label" />

  <panel id="mods.assignedInstitute">
    <cell var="noteLocationCorp">
      <repeater>
        <panel id="mods.assignedInstitute.select">
          <cell anchor="NORTHWEST" var="mods:name[@type='corporate']">
            <hidden var="mods:role/mods:roleTerm" default="University place" />
            <hidden var="mods:role/mods:roleTerm/@authority" default="marcrelator" />
            <hidden var="mods:role/mods:roleTerm/@type" default="text" />
            <hidden var="@mcr:categId" default="" />
            <panel>
              <hidden var="@editor.output" />
              <cell row="1" col="1" anchor="NORTHWEST" style="min-width:150px;">
                <output var="@editor.output" default="(neu)" />
              </cell>
              <cell row="1" col="2" anchor="NORTHEAST">
                <subselect id="institutes.subselect" type="webpage" href="content/main/classifications/select-clausthal_institutes.xml?classid=clausthal_institutes">
                  <label xml:lang="de">wählen</label>
                  <label xml:lang="en">select</label>
                </subselect>
              </cell>
            </panel>
          </cell>
          <condition id="mods.assignedInstitute.cond" xsl="count(mods:name[@type='corporate']/@mcr:categId)=1">
            <label xml:lang="de">Bitte geben Sie eine Einrichtung an!</label>
            <label xml:lang="en">Please select one entry!</label>
          </condition>
        </panel>
     </repeater>
    </cell>
  </panel>

