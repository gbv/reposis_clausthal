<?xml version="1.0" encoding="UTF-8"?>

<imports>
  <include uri="webapp:editor/editor-mods-common.xml" />
  <panel id="edit-mods-av">
    <hidden var="@ID" />
    <hidden var="@label" />
    <hidden var="@version" />
    <hidden var="service" descendants="true" />
    <hidden var="metadata/@xml:lang" default="de" />

    <include uri="webapp:editor/editor-mods-external.xml" ref="mods.additional" />

    <cell col="1" colspan="3" row="450" anchor="NORTHEAST" ref="mods.genre.av" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/@ID" />
    <hidden var="metadata/def.modsContainer/@class" default="MCRMetaXML" />
    <hidden var="metadata/def.modsContainer/@notinherit" default="true" />
    <hidden var="metadata/def.modsContainer/@heritable" default="false" />

    <!-- Basisangaben zum Dokument -->
    <cell row="10" colspan="3" anchor="NORTHWEST" class="editorSubHeadlines">
      <text id="avmedium.titles" i18n="component.mods.metaData.dictionary.av" />
      <text><label> - </label></text>
      <text id="mandatory.fields" i18n="component.mods.metaData.dictionary.requiredFields" />
    </cell>

    <!-- TITLE -->
    <cell row="20" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.title.label" style="padding-top:5px;" />
    <cell row="20" col="2" anchor="NORTHWEST" ref="mods.title" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" style="padding-top:5px;" />
    <cell row="20" col="3" anchor="NORTHWEST" ref="mods.title.help" style="padding-top:5px;" />
    <!-- TITLE END -->

    <!-- pub_autor_dok_txt [text] and reviewer -->
    <cell row="30" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.person.label" />
    <cell row="30" col="2" anchor="NORTHWEST" ref="mods.person" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="30" col="3" anchor="NORTHWEST" ref="mods.person.help" />
    <!-- pub_autor_dok_txt [text] and reviewer END -->

   <!-- Institution der Einreichung -->
    <cell row="40" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.submissionAtInstitute.label" />
    <cell row="40" col="2" anchor="NORTHWEST" ref="mods.assignedInstitute" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="40" col="3" anchor="NORTHEAST" ref="mods.submissionAtInstitute.help" />
    <!-- Institution END -->

    <!-- E-Mail -->
    <cell row="50" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.contact.label" />
    <cell row="50" col="2" anchor="NORTHWEST" ref="mods.contact" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="50" col="3" anchor="NORTHEAST" ref="mods.contact.help" />
    <!-- E-Mail END -->

    <!--  Erweiterte Angaben zum Dokument -->
    <cell row="60" colspan="3" anchor="NORTHWEST" class="editorSubHeadlines">
      <text id="avmedium.more" i18n="component.mods.metaData.dictionary.categorybox" />
    </cell>

    <!-- pub_title_html [text] -->
    <cell row="70" col="1" anchor="NORTHEAST" ref="mods.htmltitle.label" />
    <cell row="70" col="2" anchor="NORTHWEST" ref="mods.htmltitle" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo[@transliteration='html']" />
    <cell row="70" col="3" anchor="NORTHWEST" ref="mods.htmltitle.help" />
    <!-- pub_title_html [text] END -->

    <!-- pub_subtitle [text] -->
    <cell row="80" col="1" anchor="NORTHEAST" ref="mods.subtitle.label" />
    <cell row="80" col="2" anchor="NORTHWEST" ref="mods.subtitle" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="80" col="3" anchor="NORTHWEST" ref="mods.subtitle.help" />
    <!-- pub_subtitle [text] END -->

    <!-- pub_corporation -->
    <cell row="90" col="1" anchor="NORTHEAST" ref="mods.corporation.label" />
    <cell row="90" col="2" anchor="NORTHWEST" ref="mods.corporation" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="90" col="3" anchor="NORTHWEST" ref="mods.corporation.help" />
    <!-- pub_corporation END -->

    <!-- Publisher [text] -->
    <cell row="100" col="1" anchor="NORTHEAST" ref="mods.publisher.label" />
    <cell row="100" col="2" anchor="NORTHWEST" ref="mods.publisher" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="100" col="3" anchor="NORTHWEST" ref="mods.publisher.help" />
    <!-- Publisher END -->

    <!-- Datum der Veröffentlichung [text] -->
    <cell row="110" col="1" anchor="NORTHEAST" ref="mods.dateIssued.AVmedia.label" />
    <cell row="110" col="2" anchor="NORTHWEST" ref="mods.dateIssued.optional.ct" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="110" col="3" anchor="NORTHWEST" ref="mods.dateIssued.help" />
    <!-- Datum der Veröffentlichung END -->

    <!-- genre classification -->
    <cell row="115" col="1" anchor="NORTHEAST" ref="mods.genre.kindOfAVMedia.label" style="padding-top:5px;" />
    <cell row="115" col="2" anchor="NORTHWEST" ref="mods.genre.kindOfAVMedia.optional" var="metadata/def.modsContainer/modsContainer/mods:mods" style="padding-top:5px;" />
    <cell row="115" col="3" anchor="NORTHWEST" ref="mods.genre.kindOfAVMedia.help" style="padding-top:5px;" />
    <!-- genre classification END -->

    <!-- LANGUAGE -->
    <cell row="120" col="1" anchor="NORTHEAST" ref="mods.languageTerm.label" />
    <cell row="120" col="2" anchor="NORTHWEST" ref="mods.languageTerm.optional" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:language" />
    <cell row="120" col="3" anchor="NORTHWEST" ref="mods.languageTerm.help" />
    <!-- LANGUAGE END -->

    <!-- Abstract -->
    <cell row="130" col="1" anchor="NORTHEAST" ref="mods.abstract.label" />
    <cell row="130" col="2" anchor="NORTHWEST" ref="mods.abstract" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="130" col="3" anchor="NORTHWEST" ref="mods.abstract.help" />
    <!-- Abstract END -->

    <!-- Extent|Part -->
    <cell row="140" col="1" anchor="NORTHEAST" ref="mods.book.part.extent.label" />
    <cell row="140" col="2" anchor="NORTHWEST" ref="mods.book.part.extent" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="140" col="3" anchor="NORTHWEST" ref="mods.av.media.extent.help" />
    <!-- Extent|Part END -->

    <!-- Stichworte -->
    <cell row="150" col="1" anchor="NORTHEAST" ref="mods.subject.label" />
    <cell row="150" col="2" anchor="NORTHWEST" ref="mods.subject" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="150" col="3" anchor="NORTHWEST" ref="mods.subject.help" />
    <!-- Stichworte END -->

    <!-- Quelle -->
    <cell row="160" col="1" anchor="NORTHEAST" ref="mods.relatedItem.label" />
    <cell row="160" col="2" anchor="NORTHWEST" ref="mods.relatedItem" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="160" col="3" anchor="NORTHWEST" ref="mods.relatedItem.help" />
    <!-- Quelle END -->

    <!-- URL -->
    <cell row="180" col="1" anchor="NORTHEAST" ref="mods.location.url.label" style="padding-top:5px;" />
    <cell row="180" col="2" anchor="NORTHWEST" ref="mods.location.url" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:location" style="padding-top:5px;" />
    <cell row="180" col="3" anchor="NORTHWEST" ref="mods.location.url.help" style="padding-top:5px;" />
    <!-- URL END -->

    <!-- Interne Daten -->
    <cell row="200" colspan="3" anchor="NORTHWEST" class="editorSubHeadlines">
      <text id="avmedium.internals" i18n="component.mods.metaData.dictionary.institution.box" />
    </cell>

    <!-- Rechte -->
    <cell row="210" col="1" anchor="NORTHEAST" ref="mods.rights.label" />
    <cell row="210" col="2" anchor="NORTHWEST" ref="mods.rights" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="210" col="3" anchor="NORTHWEST" ref="mods.rights.help" />
    <!-- Rechte END -->

    <!-- 250-260 reserviert für Embargo etc. -->

    <!-- application specific internal data -->
    <cell row="300" col="1" colspan="3" anchor="NORTHWEST" ref="mods.internals" var="metadata/def.modsContainer/modsContainer/mods:mods" style="padding-top:5px;" />

    <cell col="1" colspan="3" row="410" anchor="NORTHEAST" style="padding-top:20px;">
      <submitButton width="100px" i18n="common.button.save" />
      <cancelButton width="100px" i18n="common.button.cancel" />
    </cell>
  </panel>
</imports>
